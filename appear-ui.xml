<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>
    <window name="appearance">

        <shape name="blackout">
            <type>box</type>
            <fill style="solid" color="yellow"/>
        </shape>

        <imagetype name="preview">
            <filename>preview.png</filename>
            <preserveaspect>false</preserveaspect>
        </imagetype>

        <imagetype name="backimg">
            <area>600,100,790,962</area>
            <filename>images/arclight_popup_large_bg.png</filename>
        </imagetype>

        <textarea name="header" from="basetextarea">
            <font>basegothiclarge</font>
            <area>710,230,570,60</area>
            <value>Appearance Wizard</value>
            <align>left,vcenter</align>
        </textarea>

        <textarea name="help1" from="basetextarea">
            <font>basegothicmidblue</font>
            <area>710,310,570,100</area>
            <value>Move the selected corner of the preview image to the corner of the TV screen.</value>
            <multiline>yes</multiline>
        </textarea>

        <textarea name="help2" from="help1">
            <font>basegothicmidblue</font>
            <area>710,410,570,50</area>
            <value>Press SELECT to edit the other corner.</value>
        </textarea>

        <textarea name="help3" from="help1">
            <font>basegothicmidblue</font>
            <area>710,460,570,50</area>
            <value>Press MENU for options and ESC to quit.</value>
        </textarea>

        <textarea name="size" from="basetextarea">
            <font>basemedium</font>
            <area>710,660,570,50</area>
            <align>allcenter</align>
        </textarea>

        <textarea name="offsets" from="size">
            <area>710,730,570,50</area>
            <align>allcenter</align>
        </textarea>

        <textarea name="changeamount" from="size">
            <area>710,870,570,50</area>
            <align>allcenter</align>
        </textarea>

    </window>
</mythuitheme>
